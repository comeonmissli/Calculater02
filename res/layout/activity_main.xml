<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
 >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minLines="2"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TableRow
            android:layout_width="match_parent"
            android:gravity="center_horizontal" >

            <Button
                android:id="@style/btn01"
                android:text="MC" />

            <Button
                android:id="@style/btn01"
                android:text="MR" />

            <Button
                android:id="@style/btn01"
                android:text="MS" />

            <Button
                android:id="@style/btn01"
                android:text="M+" />

            <Button
                android:id="@style/btn01"
                android:text="M-" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent" 
            android:gravity="center_horizontal"  >
            
           <Button
                android:id="@style/btn01"
                android:text=" Back" />

            <Button
                android:id="@style/btn01"
                android:text="CE" />

            <Button
                android:id="@style/btn01"
                android:text="C" />

            <Button
                android:id="@style/btn01"
                android:text="+-" />

            <Button
                android:id="@style/btn01"
                android:text="V" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:gravity="center_horizontal"  >
            <Button
                android:id="@style/btn01"
                android:text=" 7" />

            <Button
                android:id="@style/btn01"
                android:text="8" />

            <Button
                android:id="@style/btn01"
                android:text="9" />

            <Button
                android:id="@style/btn01"
                android:text="/" />

            <Button
                android:id="@style/btn01"
                android:text="%" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:gravity="center_horizontal"  >
           
            <Button
                android:id="@style/btn01"
                android:text="4" />

            <Button
                android:id="@style/btn01"
                android:text="5" />

            <Button
                android:id="@style/btn01"
                android:text="6" />

            <Button
                android:id="@style/btn01"
                android:text="*" />

            <Button
                android:id="@style/btn01"
                android:text="1/x" />
        </TableRow>
</TableLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/one"
            style="@style/btn01"
           android:text="1" 
           android:textColor="#0000ff"
           android:textStyle="bold"/>
        <Button
            android:id="@+id/two"
            style="@style/btn01"
           android:text="2" 
           android:layout_alignTop="@id/one"
           android:layout_toRightOf="@id/one"/>
       <Button
            android:id="@+id/three"
            style="@style/btn01"
           android:text="3" 
           android:layout_alignTop="@id/two"
           android:layout_toRightOf="@id/two"/>
       <Button
            android:id="@+id/minus"
            style="@style/btn01"
           android:text="-" 
           android:layout_alignTop="@id/three"
           android:layout_toRightOf="@id/three"/>
       <Button
            android:id="@+id/equal"
            style="@style/btn03"
           android:text="=" 
           android:layout_alignTop="@id/minus"
           android:layout_toRightOf="@id/minus"
           android:gravity="center"/>
       <Button
            android:id="@+id/plus"
            style="@style/btn01"
           android:text="+" 
           android:layout_alignBottom="@id/equal"
           android:layout_toLeftOf="@id/equal"/>
       <Button
            android:id="@+id/dot"
            style="@style/btn01"
           android:text="." 
           android:layout_alignTop="@id/plus"
           android:layout_toLeftOf="@id/plus"/>
       <Button
            style="@style/btn02"
           android:text="0" 
           android:layout_alignTop="@id/dot"
           android:layout_toLeftOf="@id/dot"/>
    </RelativeLayout>

 </LinearLayout>